@import 'variables.styl'

.quote 
  background-color: #eee;
  border-radius: 2px;
  box-shadow: 0 2px 2px rgba(#000, 10%);
  padding: 30px;
  margin: 0 auto;
  min-height: 200px;
  max-width: 600px;

  p 
    font-size: 20px;
    line-height: 2rem;
    margin-bottom: 10px;
  
  .buttons 
    margin-top: 30px;

    button
      margin-left: 30px;
      background-color: $buttonColor;
      border: none;
      cursor: pointer;
      font-size: 16px;
      padding: 10px 15px;
      transition: background-color 250ms,
                  transform 400ms;

      &:hover 
        background-color: darken($buttonColor, 20%);
        transform: scale(1.1);